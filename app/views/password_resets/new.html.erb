<h1>Forgot your password</h1>

<%= form_with url: password_reset_path, local: true do |form|%>
  <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "steve@apple.com" %>
  </div>
  <%= form.submit "Reset password", class: "btn btn-sm btn-info float-right mt-3" %>
<% end %>
