<h1>Edit Password</h1>
<%= form_with model: Current.user, url: password_path, method: :patch, local: true do |form| %>
  <% if form.object.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show">
      <% form.object.errors.full_messages.each do |message| %>
        <div><%= message %></div>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      <% end %>
    </div>
  <% end %>
  <div class="mb-3">
    <%= form.label :password %>
    <%= form.text_field :password, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :password_confirmation %>
    <%= form.text_field :password_confirmation, class:"form-control" %>
  </div>
  <%= form.submit 'Change password', class:"btn btn-sm btn-info float-right mt-3" %>
<% end %>
